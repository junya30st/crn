= render "shared/header"

= form_with(model: [@shop,@menu], local: true, method: :post) do |f|
  .menu-new
    .menu-new-wrapper
      .menu-new-wrapper__fix
        .menu-new-wrapper__fix--title
          .menu-new__title
        .menu-new-wrapper__fix--contents
          .menu-new--forms
            .menu-new--forms__name
              = f.text_field :name, placeholder: "メニュー名を入力してください"
            .menu-new--forms__introduction
              = f.text_field :introduction, placeholder: "説明を入力してください"
            .menu-new--forms__price
              = f.text_field :price, placeholder: "半角数字のみ" 
          .manu-new-submit
            = f.submit "作成する"


= render "shared/footer"