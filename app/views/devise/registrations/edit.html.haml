= render "shared/header"

.customer-edit
  = form_for(resource, as: resource_name, url: registration_path(resource_name),  html: { method: :put }) do |f|
    = render "devise/shared/error_messages", resource: resource
    .customer-edit--wrapper
      .customer-edit--wrapper--fix
        .customer-edit--wrapper__fix--title
          ユーザー編集
        .customer-edit--wrapper__fix--contents
          .customer-edit-left
            .customer-edit-form
              %label{class: 'label-up'} 名前
              %span{class: 'form-must'} 必須
              %br
              = f.text_field :name, autofocus: true, placeholder: "ニックネーム（5文字以上）", class: "form-box"
            .customer-edit-form
              %label{class: 'label-up'} メールアドレス
              %span{class: 'form-must'} 必須
              %br
              = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "例) xxx@xxx.com", class: "form-box"
            .customer-edit-form
              %label{class: 'label-up'} 現在のパスワード
              %span{class: 'form-must'} 必須
              %br
              = f.password_field :current_password, placeholder:'現在のパスワードを入力', class:'form-box'
            .customer-edit-form
              %label{class: 'label-up'} パスワード
              %span{class: 'form-must'} 必須
              %br
              = f.password_field :password, autocomplete: "new-password", class: "form-box"
            .customer-edit-form
              %label{class: 'label-up'} パスワード確認
              %span{class: 'form-must'} 必須
              %br
              = f.password_field :password_confirmation, autocomplete: "new-password", class: "form-box"
          .customer-edit-right
            .customer-edit-form
              %label{class: 'label-up'} 画像
              %span{class: 'form-want'} 任意
              %br
              = f.file_field :image
            .customer-edit-form
              %label{class: 'label-up'} 自己紹介
              %span{class: 'form-want'} 任意
              %br
              = f.text_area :introduction, placeholder: "例）こんにちは。よろしくお願いします。", class:"customer-intro-form"
        .customer-edit--wrapper__fix--submit
          = f.submit "登録する", class: "submit-button"

= render "shared/footer"











