= render "shared/header"

.shop-index
  .shop-index__wrapper
    .shop-index__wrapper__fix
      .shop-index__wrapper__fix--title
        .title-p-index
          最新のショップ
      .shop-index__wrapper__fix--contents
        .contents-p-index
          - @shop.each do |shop|
            .contents-p-index__box
              = link_to shop_path(shop.id) do
                .contents-p-index__box__in
                  .image
                    - if shop.image.present?
                      = image_tag "#{shop.image}", class: "index-img"
                    - else
                      = image_tag("noImage.png", class: "index-img")
                  .text-box
                    .text-box__name
                      .fas.fa-store
                      .name
                        = shop.name
                    .text-box__category
                      .fas.fa-tag
                      .category
                        焼き鳥
                    .intro
                      = shop.introduction

= render "shared/footer"