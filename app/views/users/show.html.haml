= render "shared/header"



.us-wrapper

  .user-profile
    .user-profile--left
      .user-profile--left__image
        = image_tag "mina.png", class: "profile-img"
      .user-profile--left__text
        .user-profile--left__text__wrapper
          %h1.user-profile--left__text__wrapper--name
            石井 惇也
          .user-profile--left__text__wrapper--menu
            - if user_signed_in? && @user.id == current_user.id
              = link_to edit_user_registration_path do
                .user-profile__menu
                  編集
              - if @card.present?
                = link_to card_path(@card) do
                  .user-profile__menu
                    カード確認
              - else
                = link_to new_card_path do
                  .user-profile__menu
                    カード登録
        %ul.user-profile--left__text--share
          %li.share-sns
    .user-profile--right
      %p.user-profile--right__text
        -# = @user.introduction
        ああああああああああああああああああああああああああああああああああああああああああああああ
  
  .mypage-content
    %ul.mypage-tab
      %li.mypage-tab__content
        %a.mypage-tab__content__click.current{href: "#tab1"} 特典一覧
      %li.mypage-tab__content
        %a.mypage-tab__content__click{href: "#tab2"} マイショップ
    #tab-contents
      #tab1.tab-content
        .user-transactions__wrapper__fix--contents 
          - @user.transactions.first(4).each do |t|
            .user-transactions__wrapper__fix--contents--fix
              = link_to transaction_path(t) do
                .user-transaction__box
                  .user-transaction__box--image
                    - if t.image.present?
                      = image_tag "#{t.image}", class: 'transaction_box_img'
                    - else
                      = image_tag 'noImage.png',class: 'transaction_box_img'
                  .user-transaction__box--texts
                    .user-transaction__box--texts--name
                      = truncate(t.name, length: 20)
                    .user-transaction__box--texts--created
                      使用期限：
                      = t.period
                    .user-transaction__box--texts--introduction
                      .inner-content
                        = truncate(t.introduction, length: 60)
      #tab2.tab-content
        .user-shop__wrapper__fix--contents__wrapper
          - @user.shops.first(4).each do |product|
            .product__box
              = link_to shop_path(product) do
                .product__box__in
                  .product__box__in--image
                    - product.shop_images.first(1).each do |image|
                      = image_tag "#{image.image}", class: 'product_box_img'
                  .product__box__in--name
                    = product.name
                  .product__box__in--intro
                    = product.introduction







