%header.header
  %nav.header--nav
    .header--nav__fix
      .header--nav__fix--logo
        = link_to '食らうどファンディング', root_path
      = form_with(url: shops_path, method: 'get') do |f|
        .shop_search
          = f.search_field :text, placeholder: "キーワードを入力", class: "seach_field"
          = f.submit "検索", class: "search_btn"
      #header-menu.header--nav__fix--menu
        MENU
      #menu-lists
        - if customer_signed_in?
          %ul.header-menu
            = link_to customer_path(current_customer) do
              %li.header-menu__list
                .fas.fa-address-card
                  マイページ
            = link_to edit_customer_registration_path(current_customer) do
              %li.header-menu__list
                .fas.fa-user-edit
                  プロフィール編集
            = link_to new_shop_path do
              %li.header-menu__list
                .fas.fa-store
                  店舗作成画面
            = link_to destroy_customer_session_path, method: :delete, data: { confirm: 'ログアウトしてよろしいですか？' }  do
              %li.header-menu__list--last
                .fas.fa-sign-out-alt
                  ログアウト
        - else
          %li
            = link_to "Sign-up", new_customer_registration_path
          %li
            = link_to "Sign-in", customer_session_path

